[%%expect ocaml {|- : unit = ()|}];;
let it = s#iterator ;;
[%%expect ocaml {|val it : int iterator = <obj>|}];;
it#get ;;
[%%expect ocaml {|- : int = 4|}];;
it#next ;;
[%%expect ocaml {|- : unit = ()|}];;
it#get ;;
[%%expect ocaml {|- : int = 5|}];;
it#next ;;
[%%expect ocaml {|- : unit = ()|}];;
it#has_value ;;
[%%expect ocaml {|- : bool = false|}];;
[@@@part "4"];;
class ['a] stack init = object
  val mutable v : 'a list = init

  method pop =
    match v with
    | hd :: tl ->
      v <- tl;
      Some hd
    | [] -> None

  method push hd =
    v <- hd :: v

  method iter f = 
    List.iter ~f v 
end ;;

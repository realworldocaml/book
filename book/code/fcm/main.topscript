module type Comparable = sig
    type t
    val compare : t -> t -> int
  end ;;

let create_comparable (type a) compare =
    (module struct
       type t = a
       let compare = compare
     end : Comparable with type t = a)
  ;;


create_comparable Int.compare;;

create_comparable Float.compare;;


let (module Bumpable) = float_bumper in Bumpable.bump 3.5;;


#part 17
let bump_list
       (type a)
       (module B : Bumpable with type t = a)
       (l: a list)
    =
    List.map ~f:B.bump l
  ;;



#part 18
bump_list int_bumper [1;2;3];;

bump_list float_bumper [1.5;2.5;3.5];;



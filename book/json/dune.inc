(rule
 (target findlib.conf)
 (action (write-file %{target} "path=\"%{project_root}/_build/install/%{context_name}/lib\"")))

(alias
 (name   runtest)
 (deps   (:x README.md)
         (:conf findlib.conf)
         (package mdx)
         (package atdgen)
         (package core)
         (package ppx_jane)
         (package yojson)
         (:y7 ../../examples/code/json/github_j_excerpt.mli)
         (:y6 ../../examples/code/json/github_org_info/github_org_info.ml)
         (:y5 ../../examples/code/json/list_excerpt.mli)
         (:y4 ../../examples/code/json/parse_book/parse_book.ml)
         (:y3 ../../examples/code/json/read_json/read_json.ml)
         (:y2 ../../examples/code/json/yojson_basic.mli)
         (:y1 ../../examples/code/json/yojson_basic_simple.mli)
         (:y0 ../../examples/code/json/yojson_safe.mli)
         (source_tree ../../examples/code/json)
         prelude.ml)
 (action (progn
           (setenv OCAMLFIND_CONF %{conf} (run ocaml-mdx test --prelude=prelude.ml --direction=to-ml --root=../../examples/code/json %{x}))
           (diff? %{y7} %{y7}.corrected)
           (diff? %{y6} %{y6}.corrected)
           (diff? %{y5} %{y5}.corrected)
           (diff? %{y4} %{y4}.corrected)
           (diff? %{y3} %{y3}.corrected)
           (diff? %{y2} %{y2}.corrected)
           (diff? %{y1} %{y1}.corrected)
           (diff? %{y0} %{y0}.corrected)
           (diff? %{x} %{x}.corrected))))

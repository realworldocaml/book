#part 8
let uppercase_file filename =
    Deferred.bind (Reader.file_contents filename)
     (fun text ->
         Writer.save filename ~contents:(String.uppercase text))
  ;;
uppercase_file "test.txt";;
Reader.file_contents "test.txt";;

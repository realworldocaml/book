(library
 (name tester)
 (libraries lwt lwttester)
 (modules (:standard \ main luv_main dummy) ))

(executable
 (name dummy)
 (modules dummy)
 (libraries unix))

(executable
 (name main)
 (libraries lwttester tester)
 (modules main))

(executable
 (name luv_main)
 (libraries lwt lwt_luv lwttester tester)
 (modules luv_main))

(alias
 (name runtest)
 (package lwt)
 (action (run %{exe:main.exe}))
 (deps bytes_io_data %{exe:dummy.exe})
)

(alias
 (name runtest_libuv)
 (package lwt)
 (action (run %{exe:luv_main.exe}))
 (deps bytes_io_data)
)

module Test_order = struct
  open Core

  let _ = printf "%s" "a"
  let _ = printf "%s" "b"

  [%% if true ]
   let _ = printf "%s" "c"
   let _ = printf "%s" "d"
   [%% define ABC]
   let _ = printf "%s" "e"
   let _ = printf "%s" "f"
  [%% endif ]

  [%% if false ]
  [%% else ]
   let _ = printf "%s" "g"
   let _ = printf "%s" "h"
   [%% define ABC]
   let _ = printf "%s" "i"
   let _ = printf "%s" "j"
  [%% endif ]

  [%% if false ]
  [%% elif true ]
   let _ = printf "%s" "k"
   let _ = printf "%s" "l"
   [%% define ABC]
   let _ = printf "%s" "m"
   let _ = printf "%s" "n"
  [%% endif ]

  let _ = printf "%s" "o"
  let _ = printf "%s" "p"
  [%% define ABC]
  let _ = printf "%s" "q"
  let _ = printf "%s" "r"
end
[%%expect{| abcdefghijklmnopqr |}]


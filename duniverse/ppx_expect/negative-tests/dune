(alias (name runtest)
 (deps function_with_distinct_outputs.ml.corrected.expected
  function_with_distinct_outputs.ml.corrected)
 (action (bash "diff -a %{deps}")))

(alias (name runtest) (deps test-output.expected test-output)
 (action (bash "diff -a %{deps}")))